/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "sourceMap": false,
    "noImplicitAny": false,
    "declaration": true,
    "noResolve": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "tests/**/*.ts"
  ]
}